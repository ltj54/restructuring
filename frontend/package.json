{
  "name": "restructuring",
  "private": true,
  "version": "0.1.0",
  "type": "module",

  "scripts": {
    "dev": "vite --open=false",
    "build": "vite build",
    "preview": "vite preview --strictPort --port 5173",

    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:ci": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=10000 || true",

    "type-check": "tsc --noEmit",

    "clean": "rimraf dist node_modules/.cache",

    "format": "prettier --write \"{src,public}/**/*.{ts,tsx,js,jsx,css,html,json,md}\"",
    "format:check": "prettier --check \"{src,public}/**/*.{ts,tsx,js,jsx,css,html,json,md}\"",

    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",

    "deploy": "echo \"GitHub Pages ikke i bruk lenger\""
  },

  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "framer-motion": "^11.11.17",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^7.0.2",
    "zod": "^3.23.8"
  },

  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.13.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "msw": "^2.6.9",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^5.4.21",
    "vitest": "^2.1.8"
  }
}
